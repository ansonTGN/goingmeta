       <http://neo4j.com/vocs/Tool/description> "Retrieve all artwork titles for a given artist_name." ;
       <http://neo4j.com/vocs/Tool/name> "get_artist_works" ;
       <http://neo4j.com/vocs/Tool/query> "MATCH (a:Artist {name: $input})<-[:created_by]-(aw:Artwork) RETURN aw.title as artwork_title, aw.dateText as creation_date" .


